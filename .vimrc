colorscheme desert
syntax on
filetype plugin indent on
set exrc                " liest .vimrc im [pwd] ein wenn vorhanden
set secure              " unterbindet gewisse befehle in [pwd].vimrc
set fileencoding=utf-8
set ruler
set background=dark
set showcmd
set showmatch
set ignorecase
set smartcase
set incsearch
set autowrite
set hidden
set mouse=a
set nojoinspaces

set number
set backup
set backupdir=~/tmp
set dir=~/tmp
